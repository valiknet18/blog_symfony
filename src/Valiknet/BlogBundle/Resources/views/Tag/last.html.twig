{% extends 'ValiknetBlogPostsBundle:Layouts:main.html.twig' %}

{% block title %}
    {{ "title.last_tags"|trans() }}
{% endblock %}

{% block styles %}
    <link href="{{ asset('bundles/valiknetblogposts/style/tag/last.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
    <div id="last_tag">
        <h3>
            {{ tags|length }} {{ "another.last_tags"|transchoice(tags|length) }}
        </h3>
        <ul>
            {% for tag in tags %}
                <li>
                    <a href='{{ path('tag_page', { "slug" : tag.hashSlug }) }}'>{{ tag.hashTag|hashTag }}</a>
                </li>
            {% else %}
                <li>
                    <h3>
                        {{ "tags.tags_error_message"|trans() }}
                    </h3>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
