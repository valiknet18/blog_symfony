<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd"
        >
    <services>
        <service id="valiknet.blog.postsbundle.twig.valiknet_blog_extension" class="Valiknet\Blog\PostsBundle\Twig\ValiknetBlogExtension">
            <tag name="twig.extension" />
        </service>

        <service id="valiknet.blog.postsbundle.services.post_handler" class="Valiknet\Blog\PostsBundle\Services\PostHandler">
        </service>

        <service id="valiknet.blog.postsbundle.services.comment_handler" class="Valiknet\Blog\PostsBundle\Services\CommentHandler">
            <argument type="service" id="request_stack" />
        </service>
    </services>
</container>
