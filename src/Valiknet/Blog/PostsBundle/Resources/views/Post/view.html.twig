{% extends 'ValiknetBlogPostsBundle:Layouts:main.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block content %}
    <div>
        <div>
            {#{{ dump(post) }}#}
            <a href="{{ path('edit_post', {'slug':post.getSlugPost }) }}">Редагувати</a>
            <a href="{{ path('delete_post', {'id':post.id}) }}" id="delete_post">Видалити</a>
        </div>
        <div class="title">{{ post.title }}</div>
        <div>{{ post.text }}</div>
        <div>{{ post.author }}</div>
        <div><b>Дата створення:</b> {{ post.createdAt.date|date("d.m.Y H:i:s") }}</div>

        {% if(post.updatedAt) %}
            <div><b>Дата останнього оновлення:</b> {{ post.updatedAt.date|date("d.m.Y H:i:s") }}</div>
        {% endif %}

        {% if(post.tag) %}
            <div>Теги:
                {% for tag in post.tag %}
                    <a href="{{ path('tag_page', {'slug': tag.hashSlug}) }}">#{{ tag.hashTag }}</a>
                {% endfor %}
            </div>
        {% endif %}

        {% if(post.comment) %}
            <div>
                <fieldset>
                    <legend>Коментарі</legend>
                    <ul id="category_list">
                    {% for comment in post.comment|reverse %}
                        <li>
                            <div>
                                <div>{{ comment.author }}</div>
                                <div>{{ comment.text }}</div>
                                <div><b>Дата створення:</b> {{ comment.createdAt|date("d.m.Y H:i:s") }}</div>
                            </div>
                        </li>
                    {% else %}
                        <li>
                            <h3>До даної статі не створили ні одного коментаря</h3>
                        </li>
                    {% endfor %}
                    </ul>
                    <form action="{{ path("comment_add", {"id" : post.id}) }}" role="form" method="POST" id="comment_add">
                        <div>
                            <label>Автор: </label>
                            <input type="text" name="author"/>
                        </div>

                        <div>
                            <label>
                                Текст коментаря:
                            </label>
                            <textarea maxlength="255" name="text"></textarea>
                        </div>

                        <div>
                            <input type="submit" value="create"/>
                        </div>
                    </form>
                </fieldset>
            </div>
        {% endif %}
        <div></div>
    </div>
{% endblock %}