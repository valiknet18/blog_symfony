{% extends 'ValiknetBlogPostsBundle:Layouts:main.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block content %}
    <div>
        <div class="title">{{ post.title }}</div>
        <div>{{ post.text }}</div>
        <div>{{ post.author }}</div>
        <div>{{ post.createdAt.date|date("d.m.Y H:i:s") }}</div>
        {% if(post.tag) %}
            <div>Теги:
                {% for tag in post.tag %}
                    <a href="{{ path('tag_page', {'slug': tag.hashSlug}) }}">#{{ tag.hashTag }}</a>
                {% endfor %}
            </div>
        {% endif %}

    </div>
{% endblock %}