{% extends "ValiknetBlogPostsBundle:Layouts:main.html.twig" %}

{% block title %}
    Головна сторінка
{% endblock %}

{% block content %}
    <div id="posts_list">
        <div>
            <a href="">Створити новий запис</a>
        </div>

        {% for post in posts %}
            <div>
                <div class="title">{{ post.title }}</div>
                <div>{{ post.text|slice(0,150) }}</div>
                <div>{{ post.author }}</div>
                <div>{{ post.createdAt.date|date("d.m.Y H:i:s") }}</div>
                {% if(post.tag) %}
                    <div>Теги:
                        {% for category in post.tag %}
                            <a href="">#{{ category.hashTag }}</a>
                        {% endfor %}
                    </div>
                {% endif %}

            </div>
        {% else %}
            <div>
                <h3>На даний момент в блогі немає ні одного запису</h3>
            </div>
        {% endfor %}
    </div>

    <div id="top_tags_list">
        <span>10 найпопулярніших тегів</span>
        <ul>
            {% for tag in tags %}
            <li>
                <a href="">{{ tag.hash_tag }}</a>
            </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}